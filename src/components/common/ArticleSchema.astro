---
export interface Props {
  title: string;
  description: string;
  publishDate: Date | string;
  updateDate?: Date | string;
  author?: string;
  image?: string;
  url: string;
}

const { title, description, publishDate, updateDate, author = 'Isabelle Reuben', image, url } = Astro.props;

const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description: description,
  datePublished: new Date(publishDate).toISOString(),
  ...(updateDate && { dateModified: new Date(updateDate).toISOString() }),
  author: {
    '@type': 'Person',
    name: author,
    url: 'https://wealthsimplebonus.ca/about',
  },
  publisher: {
    '@type': 'Organization',
    name: 'Wealthsimple Bonus',
    url: 'https://wealthsimplebonus.ca',
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': url,
  },
  ...(image && {
    image: {
      '@type': 'ImageObject',
      url: image,
    },
  }),
};
---

<script is:inline type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
