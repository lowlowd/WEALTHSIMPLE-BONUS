---
export interface Props {
  title: string;
  description: string;
  publishDate: Date | string;
  updateDate?: Date | string;
  author?: string;
  image?: string;
  url: string;
  language?: string;
}

const {
  title,
  description,
  publishDate,
  updateDate,
  author = 'Isabelle Reuben',
  image,
  url,
  language = 'en-CA',
} = Astro.props;

// Only show dateModified if the updateDate has passed (no future dates exposed in schema)
// Compare using local date strings (YYYY-MM-DD) to avoid UTC timezone issues
const todayStr = new Date().toLocaleDateString('en-CA'); // Returns YYYY-MM-DD format
const updateDateStr = updateDate ? new Date(updateDate).toISOString().split('T')[0] : null;
const effectiveUpdateDate = updateDateStr && updateDateStr <= todayStr ? updateDate : undefined;

const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description: description,
  inLanguage: language,
  datePublished: new Date(publishDate).toISOString(),
  ...(effectiveUpdateDate && { dateModified: new Date(effectiveUpdateDate).toISOString() }),
  author: {
    '@type': 'Person',
    name: author,
    url: 'https://wealthsimplebonus.ca/about',
  },
  publisher: {
    '@type': 'Organization',
    name: 'Wealthsimple Bonus',
    url: 'https://wealthsimplebonus.ca',
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': url,
  },
  ...(image && {
    image: {
      '@type': 'ImageObject',
      url: image,
    },
  }),
};
---

<script is:inline type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
