---
export interface FAQ {
  title: string;
  description: string;
}

export interface Props {
  faqs: FAQ[];
}

const { faqs } = Astro.props;
---

<script
  type="application/ld+json"
  is:inline
  set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'FAQPage',
    mainEntity: faqs.map((faq) => ({
      '@type': 'Question',
      name: faq.title,
      acceptedAnswer: {
        '@type': 'Answer',
        text: faq.description,
      },
    })),
  })}
/>
